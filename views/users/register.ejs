<% layout('layouts/boilerplate')%>
<h1>Register</h1>
<form action="/register" method="POST" class="needs-validation" novalidate>
  <div class="mb-3">
    <label class="form-label" for="title">Username</label>
    <input
      class="form-control"
      type="text"
      id="usename"
      name="username"
      required
    />
    <div class="invalid-feedback">Please provide an username</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="title">Email</label>
    <input
      class="form-control"
      type="email"
      id="usename"
      name="email"
      required
    />
    <div class="invalid-feedback">Please provide an email</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="title">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="invalid-feedback">Please add a password</div>
  </div>
  <button class="btn btn-success">Submit</button>
</form>
